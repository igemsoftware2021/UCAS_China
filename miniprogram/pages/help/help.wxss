page {
  background: #ecebebef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

}  
  .container {
    height: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }
   
  .title {
    width: 100%;
    height: 88rpx;
    background: rgb(234, 238, 234);
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
   
  .title-sel {
    color: #121418;
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
   
  .title-sel  .line-style{
    background: rgb(252, 252, 252);
    height: 6rpx;
    width: 40rpx;
    position: relative;
    margin-top: 10rpx;
  }
   
  .title-sel-selected{
    color: #006bff;
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .title-sel-selected .line-style{
    background: #006bff;
    height: 6rpx;
    width: 90rpx;
    position: relative;
    margin-top: 10rpx;
  }

  
   
  .swiper {
    width: 90%;
    flex: 1;
    overflow: scroll;
    margin: 0 auto;
  }
   
  .record-item {
    margin-top: 10rpx;
    background-color: rgb(250, 245, 245);
    padding-bottom: 5rpx;
    padding-top: 5rpx;
    font-size: 30rpx;
  }

  .record-item-selected {
    margin-top: 10rpx;
    background-color: rgb(245, 247, 250);
    padding-bottom: 5rpx;
    padding-top: 5rpx;
    font-size: 30rpx;
  }
   
  .name{
    display: flex;
    justify-content: space-between;
    border: 1px solid rgb(250, 246, 246);
    padding: 2vh;
    border-radius: 10rpx
  }

  .item .remove {
    width: 60px;
    height: 100%;
    background-color: red;
    position: absolute;
    top: 0;
    right: -60px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
