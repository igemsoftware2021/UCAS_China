<!--home.wxml-->
<view class="container">
  <view>
    <image style="width: 100vw; height: 80px; background-color: #eeeeee;" mode="aspectFill" src="../../images/topimage/cafe.jpeg"></image>
  </view>

  <!--个人表面信息-->
  <view class="person">
    <!--头像-->
    <view class="head"></view>
    <!--名称-->
    <view class="name"></view>
    <!--咖啡饮用健康程度 可选-->
    <view class="health"></view>
  </view>

  <!--一系列navigator-->
  <view class="navigator_group">
    <navigator url="/pages/setting/setting" hover-class="navigator-hover" class="navigator_part">
      <view class="word-container"><text class="navigator-text">设置</text></view>
    </navigator>
    <navigator url="/pages/history/history" hover-class="navigator-hover" class="navigator_part">
      <view class="word-container"><text class="navigator-text">咖啡饮用分析</text></view>
    </navigator>
    <navigator url="/pages/routine/routine" hover-class="navigator-hover" class="navigator_part">
      <view class="word-container"><text class="navigator-text">日常习惯</text></view>
    </navigator>
    <navigator url="/pages/help/help" hover-class="navigator-hover" class="navigator_part">
      <view class="word-container"><text class="navigator-text">帮助</text></view>
    </navigator>
    <navigator url="/pages/about_us/about_us" hover-class="navigator-hover" class="navigator_part">
      <view class="word-container"><text class="navigator-text">关于我们</text></view>
    </navigator>
  </view>
</view>
